# Environment Configuration
ENVIRONMENT=local
DEBUG=true

# Database Configuration
# For local development (SQLite)
DATABASE_URL=sqlite:///./storage/ebpublicador.db

# For PostgreSQL (Railway, Render, etc.)
# DATABASE_URL=postgresql://username:password@host:port/database

# AI Service API Keys
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Security
SECRET_KEY=your_super_secret_key_here_change_this_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# File Upload Configuration
UPLOAD_MAX_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,svg,pdf,doc,docx,txt,md

# Storage Configuration
STORAGE_PATH=./storage
STATIC_URL=/static
UPLOADS_URL=/uploads

# Application Settings
SITE_TITLE=EBPublicador
SITE_DESCRIPTION=AI-Powered Content Management System
SITE_URL=http://localhost:8000
POSTS_PER_PAGE=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=./storage/logs/app.log

# Cloud Platform Detection (auto-detected, don't set manually)
# VERCEL=1
# RAILWAY_ENVIRONMENT=production
# RENDER=true
# DOCKER_CONTAINER=true

# Production Database Examples:
# Railway PostgreSQL:
# DATABASE_URL=postgresql://postgres:password@containers-us-west-xxx.railway.app:5432/railway

# Render PostgreSQL:
# DATABASE_URL=postgresql://user:password@dpg-xxx-a.oregon-postgres.render.com/database

# Vercel (use SQLite or external DB):
# DATABASE_URL=sqlite:///tmp/ebpublicador.db