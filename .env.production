DEBUG=false
LOG_LEVEL=INFO

# Base de datos (SQLite para Vercel)
DATABASE_URL=sqlite:///./autopublicador.db
REDIS_URL=

# Seguridad (GENERAR NUEVAS CLAVES PARA PRODUCCIÓN)
