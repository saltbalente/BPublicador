{
  "functions": {
    "backend/main_vercel.py": {
      "runtime": "python3.11",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/frontend/(.*)",
      "destination": "/frontend/$1"
    },
    {
      "source": "/static/(.*)",
      "destination": "/backend/static/$1"
    },
    {
      "source": "/images/(.*)",
      "destination": "/images/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/backend/main_vercel.py"
    }
  ],
  "env": {
    "PYTHONPATH": "backend",
    "ENVIRONMENT": "production"
  },
  "installCommand": "pip install -r requirements-vercel.txt"
}