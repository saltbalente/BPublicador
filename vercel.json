{
  "_comment": "Configuraci√≥n optimizada para Vercel - Runtime corregido",
  "functions": {
    "backend/main_vercel.py": {
      "runtime": "@vercel/python",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/frontend/(.*)",
      "destination": "/frontend/$1"
    },
    {
      "source": "/static/(.*)",
      "destination": "/backend/static/$1"
    },
    {
      "source": "/images/(.*)",
      "destination": "/images/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/backend/main_vercel.py"
    }
  ],
  "env": {
    "PYTHONPATH": "backend",
    "ENVIRONMENT": "production"
  },
  "installCommand": "pip install -r requirements-vercel.txt"
}