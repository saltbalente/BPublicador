{

  "rewrites": [
    {
      "source": "/frontend/(.*)",
      "destination": "/frontend/$1"
    },
    {
      "source": "/static/(.*)",
      "destination": "/backend/static/$1"
    },
    {
      "source": "/images/(.*)",
      "destination": "/images/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index"
    }
  ],
  "env": {
    "PYTHONPATH": "backend",
    "ENVIRONMENT": "production"
  },
  "installCommand": "pip install -r requirements.txt",
  "builds": [
    {
      "src": "backend/vercel_init.py",
      "use": "@vercel/python",
      "config": { "executionCommand": "python backend/vercel_init.py" }
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ]
}